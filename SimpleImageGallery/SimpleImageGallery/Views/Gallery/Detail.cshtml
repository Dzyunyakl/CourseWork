@model SimpleImageGallery.Models.GalleryDetailModel

<div class="container body-content">
    <div class="row image-detail-container">
        <div class="image-detail">
            <img src="@Model.Url" alt="@Model.Title" />       
        </div>
        <div class="row image-detail-meta">
            <span>Title: @Model.Title</span><br>
            <span>Uploaded: @Model.CreatedOn</span>
        </div>
        <div class="row controls">
            <a class="btn btn-primary" asp-controller="Gallery" asp-action="Index">
                Back to Gallery
            </a>
            <a class="btn btn-default" asp-controller="Gallery" asp-action="GetStatistics" asp-route-id="@Model.Id">
                Statistics
            </a>
            <a class="btn btn-danger" asp-controller="Gallery" asp-action="Delete" asp-route-id="@Model.Id">
                Delete
            </a>
        </div>
    </div>
</div>